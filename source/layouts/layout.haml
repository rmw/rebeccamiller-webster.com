<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "Rebecca Miller-Webster"
    = stylesheet_link_tag "normalize", "application"
    %link{ href: "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css", rel: "stylesheet", media: "screen", type: "text/css" }

  %body{:class => page_classes}
    .container-fluid
      = yield

  %script{ src: "http://code.jquery.com/jquery.js" }
  = javascript_include_tag  "application"

  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-26356124-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
